{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2021",
      "ES2021.Intl",
      "ES2021.Promise",
      "ES2021.String",
      "ES2021.WeakRef"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowUnreachableCode": false,
    "allowUmdGlobalAccess": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": false,
    "removeComments": false
    //"resolvePackageJsonImports": true,
    //"resolvePackageJsonExports": true,
    },
  "include": ["./src/**/*.ts","./src/**/*.tsx"],
  "exclude": ["./dist/**"],
}